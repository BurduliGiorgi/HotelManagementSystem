﻿@using HotelManagementSystem.ViewModels;
@model RegisterViewModel;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

<div class="account-container">
    <div class="account-box shadow-lg rounded-4">
        <div class="account-header text-center mb-4">
            <h2 class="fw-bold">Welcome</h2>
        </div>
        <form asp-action="Register" method="post" class="account-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your Name" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassowrd" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassowrd" class="form-control form-control-lg" placeholder="Enter your ConfirmPassowrd" />
                <span asp-validation-for="ConfirmPassowrd" class="text-danger small"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3 fw-semibold">
                Register
            </button>

            <div class="text-center pt-3">
                <p class="text-muted">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold">Login</a></p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}